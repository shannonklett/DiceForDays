<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.owner.dicesimulator2015" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo1"
        android:logo="@drawable/logo1"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            android:screenOrientation="landscape"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".VsScreen"
            android:label="Versus"
            android:screenOrientation="landscape"
            android:configChanges="keyboardHidden|orientation|screenSize">
        </activity>
        <activity
            android:name=".MenuFragment"
            android:label="@string/title_activity_menu_fragment" >
        </activity>
        <activity
            android:name=".CustomizationScreen"
            android:label="@string/title_activity_customization_screen" >
        </activity>
    </application>

</manifest>
