<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.owner.dicesimulator2015.VsScreen">


    <AbsoluteLayout
        android:id="@+id/rightSide"
        android:layout_width="485dp"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="5dp"
        android:paddingTop="0dp">

        <View
            android:layout_width="10dp"
            android:layout_height="475dp"
            android:background="#000000"
            android:layout_marginTop="15dp" />

    </AbsoluteLayout>

    <AbsoluteLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/leftSide"
        android:layout_toLeftOf="@+id/rightSide"
        android:layout_toStartOf="@+id/rightSide">

    </AbsoluteLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/diceSlider"
        android:src="@drawable/dicesliderdown"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="70dp"
        android:layout_gravity="right|top" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/soloSlider"
        android:src="@drawable/soloslider"
        android:layout_gravity="right|center|bottom"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentTop="false" />

    <FrameLayout
        android:layout_weight="2"
        android:layout_width="390dp"
        android:layout_height="240dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/fragmentContainer"
        android:layout_x="0dp"
        android:layout_y="0dp" >

    </FrameLayout>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/lockButton"
        android:onClick="toggleLockMode"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/lockbutton"
        android:layout_alignParentEnd="true"
        android:baselineAlignBottom="false"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="right|bottom"
        android:layout_marginTop="425dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:id="@+id/garbage"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:layout_x="803dp"
        android:layout_y="500dp"
        android:src="@drawable/deleteicon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="477dp"
        android:layout_marginLeft="455dp" />

</RelativeLayout>
